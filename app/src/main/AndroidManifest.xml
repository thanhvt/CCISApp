<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.es.ccisapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CCISActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeNavActivity"
            android:label="@string/title_activity_home_nav"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_main_tab" />
        <activity
            android:name=".TaxInvoiceDetailActivity"
            android:label="@string/title_activity_tax_invoice_detail"
            android:parentActivityName=".CCISActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.es.ccisapp.CCISActivity" />
        </activity>
    </application>

</manifest>